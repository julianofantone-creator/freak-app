{
  "name": "freak-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "NODE_ENV=production npm run build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --fix",
    "lint:check": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "analyze": "npx vite-bundle-analyzer",
    "deploy:prod": "./deploy-production.sh",
    "setup:env": "./scripts/setup-env.sh",
    "validate:env": "node scripts/validate-env.js",
    "health:check": "curl -f https://freaky.app && curl -f https://api.freaky.app/health",
    "lighthouse": "lighthouse https://freaky.app --output=html --output-path=./reports/lighthouse.html",
    "security:audit": "npm audit --audit-level moderate",
    "deps:update": "npx npm-check-updates -u && npm install",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "echo 'ðŸ”¥ Freaky dependencies installed! Run npm run dev to start.'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4",
    "react-router-dom": "^6.20.1",
    "framer-motion": "^10.16.16",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}