{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci --only=production",
    "watchPatterns": ["**/*.js", "**/*.json"]
  },
  "deploy": {
    "startCommand": "node src/simple-server.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "$PORT"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "$PORT"
      }
    }
  }
}